@model IEnumerable<CreateIdentityApp.Models.User>
@{ 
    ViewData["Title"] = "List of users";
}

<a asp-action="Create" asp-controller="Users">Add new user</a>
<table>
    <tr>
        <th>Email</th>
        <th>Year</th>
        <th></th>
    </tr>
    @foreach(var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.YearBirth</td>
            <td>
                <form method="post" asp-action="Delete" asp-controller="Users" asp-route-id="@user.Id">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change password</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>